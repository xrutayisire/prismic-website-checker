{
  "name": "Prismic Website Checker",
  "version": "1.0.0",
  "description": "It tells you if a website is made with Prismic",
  "manifest_version": 3,
  "author": "Xavier RUTAYISIRE",
  "action": {
    "default_popup": "./html/index.html"
  },
  "background": {
    "service_worker": "/js/background.js"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "128": "./images/prismic.png"
  }
}
